@model IEnumerable<demoweb.Models.Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div style="margin: 10px auto; width: 70%;">
    <h2 style="text-align: center ; color:deeppink"> Danh Sách tài Khoản</h2>
    <p>
        @Html.ActionLink("TẠO MỚI", "Create", null, new
        {
            @class = "btn btn-primary"
        })
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NameCus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneCus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmailCus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PassCus)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NameCus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneCus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmailCus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PassCus)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.IDCus }, new
                             {
                                 @class = "btn btn-success"
                             }) |
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.IDCus },
                              new { @class = "btn btn-primary" }) |
                    @Html.ActionLink("Xóa", "Delete", new { id = item.IDCus }, new
                    {
                        @class = "btn btn-danger"
                    })
                </td>
            </tr>
        }

    </table>
</div>