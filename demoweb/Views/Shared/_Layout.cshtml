    <div id="bodi">
        <div class="sizeslide">
            <div id="myCarousel" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1"></li>
                    <li data-target="#myCarousel" data-slide-to="2"></li>
                </ol>

                <!-- Wrapper for slides -->
                <div class="carousel-inner">
                    <div class="item active">
                        <img src="https://tocotocotea.com/wp-content/uploads/2022/06/Slide_banner-1-1.jpg" class="d-block w-100" alt="...">
                    </div>

                    <div class="item">
                        <img src="https://tocotocotea.com/wp-content/uploads/2022/06/Slide_banner-2.jpg" class="d-block w-100" alt="...">
                    </div>

                    <div class="item">
                        <img src="https://tocotocotea.com/wp-content/uploads/2022/06/Slide_banner-3.jpg" class="d-block w-100" alt="...">
                    </div>
                </div>

                <!-- Left and right controls -->
                <a style="opacity:-12" class="left carousel-control" href="#myCarousel" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a style="opacity:-12" class="right carousel-control" href="#myCarousel" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>

    </div>
    <div id="div-main">
        <div id="div-right">
            @RenderBody()
        </div>
    </div>
    <div-main-content>
        <iframe width="100%" height="400px" src="https://www.youtube.com/embed/jDXYpGZOSiE" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
