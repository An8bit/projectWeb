@model IEnumerable<demoweb.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<style>
    .table tr th
    {
        color:deeppink;
    }
    h2{
        color:deeppink;
    }
</style>
<div style="margin: 10px auto; width: 90%;">
    <h2 style="text-align: center">THÔNG TIN PRODUCTS</h2>
    <p>
        @Html.ActionLink("TẠO MỚI", "Create", null, new {@class ="btn btn-primary"})
    </p>
    <table class="table">
        <tr>
            <th>
                TÊN SẢN PHẨM
            </th>

            <th>
                MÔ TẢ
            </th>
            <th>
                GIÁ
            </th>
            <th>
                HÌNH
            </th>
            <th>
                CATEGORY
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NamePro)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DecriptionPro)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    <img src="~/Images/@item.ImagePro" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem =>
                    item.Category1.NameCate)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new{id =item.ProductID}, new { @class = "btn btn-success" }) |
                    @Html.ActionLink("Chi tiết", "Details", new
                    {id =item.ProductID}, new { @class = "btn btn-primary" }) |
                    @Html.ActionLink("Xóa", "Delete", new
                    {id =item.ProductID}, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </table>
</div>