<h2 style="text-align: center ;color:deeppink">Trà Sữa</h2>
<div class="sizeslide">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="item active">
                <img src="https://printgo.vn/uploads/media/792227/banner-quang-cao-tra-sua-1_1623309813.jpg" style="width:100%;height:200px" alt="Los Angeles">
            </div>

            <div class="item">
                <img style="width:100%;height:200px" src="https://media-exp1.licdn.com/dms/image/C5112AQG_O5ZDHRGffw/article-cover_image-shrink_600_2000/0/1520220680019?e=2147483647&v=beta&t=AwiO8h3AZosdBPC5vLgsLZmupFLUkyZEYsAKuNIPzu8" alt="Chicago">
            </div>

            <div class="item">
                <img style="width:100%;height:200px" src="https://www.venuscinema.vn/uploaded/slideshow/banner-tra-sua-02.jpg" alt="New York">
            </div>
        </div>

        <!-- Left and right controls -->
        <a style="opacity:-12" class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a style="opacity:-12" class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
